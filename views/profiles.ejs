.overlay {
  position: absolute;
  bottom: 10px;       /* bottom margin */
  left: 50%;          /* center horizontally */
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.6);
  color: white;
  padding: 6px 12px;
  border-radius: 20px;
  display: flex;
  gap: 15px;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
  font-size: 14px;
  align-items: center;
  min-width: 100px;
  justify-content: center;
}

    /*  */
    .post:hover .overlay {
      opacity: 1;
      pointer-events: auto;
    }

    .overlay span {
      display: flex;
      align-items: center;
      gap: 6px;
    }

    .overlay svg.icon-heart,
    .overlay svg.icon-comment {
      width: 20px;
      height: 20px;
      fill: white;
      vertical-align: middle;
    }

    /*  */
.post.horizontal {
  aspect-ratio: 16 / 9;
  width: 100%;
  max-width: 100%;
}

.post.vertical {
  aspect-ratio: 3 / 4;
  width: 100%;
  max-width: 100%;
}

/* Or you can do different grid spans */
.posts-grid {
  /* display: grid; */
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 20px;
}

.post.horizontal {
  grid-column: span 2;
}

.post.vertical {
  grid-column: span 1;
