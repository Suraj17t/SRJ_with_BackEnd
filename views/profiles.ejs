    }

    .tabs {
      display: flex;
      justify-content: center;
      margin: 30px 0 20px;
      border-bottom: 1px solid #ccc;
    }

    .tab-button {
      background: none;
      border: none;
      padding: 10px 20px;
      font-size: 16px;
      cursor: pointer;
      color: #888;
      border-bottom: 2px solid transparent;
      transition: 0.3s;
      display: flex;
      align-items: center;
      gap: 6px;
    }

    .tab-button.active {
      color: #000;
      border-color: #000;
      font-weight: 600;
    }

    .posts-grid {
      display: none;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 20px;
    }

    .posts-grid.active {
      display: grid;
    }

    .post {
      position: relative;
      width: 100%;
      aspect-ratio: 1 / 1;
      overflow: hidden;
      background: #eee;
      border-radius: 8px;
      cursor: pointer;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
